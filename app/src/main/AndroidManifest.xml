<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.handoutlms">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TutorsDashboard"
            android:theme="@style/BottomNavTheme"></activity>
        <activity android:name=".TutorSelectCategory" />
        <activity android:name=".StudentDashboard" />
        <activity android:name=".TutorOrStudent" />
        <activity android:name=".WelcomePage" />
        <activity android:name=".Signup" />
        <activity android:name=".Login" />
        <activity
            android:name=".LoginSignup"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FirstScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>