<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f05d72"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/card">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic44"/>


        <TextView
            android:id="@+id/groupName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins_bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Learning how to create beautiful scenes in Illustrator"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/ic43"/>

            <TextView
                android:id="@+id/groupTime"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="30 minutes"
                android:textColor="#ffffff"
                android:textSize="8dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/groupTutor"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_light"
            android:maxLines="1"
            android:text="Tutor: Jack Grealish"
            android:textColor="#ffffff"
            android:textSize="8dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>