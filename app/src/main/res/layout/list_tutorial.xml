<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#293241"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lin_lay"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="85dp"
            android:layout_height="100dp"
            android:id="@+id/img"
            android:src="@drawable/ic44"/>

        <TextView
            android:id="@+id/tut_name"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_bold"
            android:maxLines="1"
            android:text="Logo Design"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tut_description"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_light"
            android:maxLines="1"
            android:paddingRight="10dp"
            android:text="XX"
            android:textColor="#ffffff"
            android:textSize="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tut_category"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_light"
            android:maxLines="1"
            android:text="XX"
            android:textColor="#ffffff"
            android:textSize="8dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/on_or_offline"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:visibility="gone"
                android:src="@drawable/online"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tut_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Online"
                    android:textColor="#fff"
                    android:textSize="8dp" />

                <TextView
                    android:id="@+id/tutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:paddingLeft="2dp"
                    android:text="Tutorial"
                    android:textColor="#fff"
                    android:textSize="8dp" />
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>


</LinearLayout>