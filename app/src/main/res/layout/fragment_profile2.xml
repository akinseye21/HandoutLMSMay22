<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_profile2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile2">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#293241">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="130dp"
           android:background="@drawable/ic90" />

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/pp"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="60dp"
           android:src="@drawable/user"
           app:civ_border_color="#fff"
           app:civ_border_overlay="true"
           app:civ_border_width="2dp" />

       <TextView
           android:id="@+id/email"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/pp"
           android:layout_marginLeft="20dp"
           android:ellipsize="end"
           android:maxLength="18"
           android:text=""
           android:textColor="#ffffff"
           android:textSize="8dp"
           android:textStyle="normal" />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:id="@+id/prof"
           android:layout_toRightOf="@+id/pp"
           android:layout_marginTop="140dp"
           android:layout_marginLeft="10dp">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/user_name"
                   android:text=""
                   android:textColor="#ffffff"
                   android:textStyle="bold"
                   android:textSize="12dp"/>
           </LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/department"
               android:visibility="gone"
               android:text=""
               android:textColor="#ffffff"
               android:textSize="10dp"
               android:textStyle="normal"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/school"
               android:text=""
               android:textColor="#ffffff"
               android:textSize="10dp"
               android:textStyle="normal"/>
       </LinearLayout>

       <LinearLayout
           android:id="@+id/editProfile"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginTop="140dp"
           android:layout_marginRight="10dp"
           android:gravity="center_vertical"
           android:orientation="horizontal">

           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/ic57" />

           <TextView
               android:id="@+id/edit"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="2dp"
               android:text="Edit Profile"
               android:textColor="#ffffff"
               android:textSize="10dp"
               android:textStyle="bold" />
       </LinearLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/prof"
           android:id="@+id/myrel"
           android:layout_margin="10dp">
