               android:layout_height="2dp"
               android:layout_below="@+id/lincat"
               android:background="#59ffffff"
               android:id="@+id/line"
               android:layout_marginTop="3dp"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:orientation="horizontal">

           <LinearLayout
