<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#293241"
    android:orientation="vertical"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/rel1">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/back"
            android:src="@drawable/arrow_left"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hey,\nWelcome\nBack!"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_marginLeft="20dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_height="200dp"
                    android:src="@drawable/ic137"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/new_login"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic142"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="#ffffff"
                    android:id="@+id/txtil1"
                    android:layout_below="@+id/img"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="10dp"
                        android:hint="Email address"
                        android:textColorHint="#ffffff"
                        android:textColor="#ffffff"
                        android:inputType="textEmailAddress"
                        android:textSize="15dp"
                        android:id="@+id/edtemail"
                        android:singleLine="true"
                        android:background="@android:color/transparent"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/new_login"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic144"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffffff"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txtil"
                    android:layout_below="@+id/view1"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#ffffff">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="10dp"
                        android:hint="Password"
                        android:textColorHint="#ffffff"
                        android:textColor="#ffffff"
                        android:inputType="textPassword"
                        android:textSize="15dp"
                        android:id="@+id/edtpassword"
                        android:singleLine="true"
                        android:background="@android:color/transparent"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password?"
                android:textColor="#ff6678"
                android:textSize="12dp"
                android:textStyle="italic"
                android:id="@+id/forgot_password"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"/>

            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_gravity="center"
                android:id="@+id/progressBar"/>


            <Button
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:text="Login"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/rounded_orange"
                android:textAllCaps="false"
                android:id="@+id/login"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"/>

