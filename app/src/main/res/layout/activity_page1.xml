<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#293241"
    tools:context=".uniabuja.Page1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_arrow_left" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/back"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Hi, John"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Let's make today productive"
                    android:textColor="#ffffff"
                    android:textSize="13dp" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/pp"
                android:src="@drawable/user" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="#ffffff"
            android:id="@+id/view"
            android:layout_below="@+id/one"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/view"
            android:id="@+id/selectlevel"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Select Your Level"
                android:textColor="#ffffff"
                android:textSize="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/radio100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:buttonTint="#ffffff"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:text="100 level"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200 level"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:id="@+id/radio200"
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_light"
                    android:buttonTint="#ffffff"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300 level"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:id="@+id/radio300"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins_light"
                    android:buttonTint="#ffffff"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400 level"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:id="@+id/radio400"
                    android:gravity="center_vertical"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/poppins_light"
                    android:buttonTint="#ffffff"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 level"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:id="@+id/radio500"
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_light"
                    android:buttonTint="#ffffff"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="600 level"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:id="@+id/radio600"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins_light"
                    android:buttonTint="#ffffff"/>


            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="#ffffff"
            android:id="@+id/view2"
            android:layout_below="@+id/selectlevel"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/view2"
            android:id="@+id/selectfaculty"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Select Your Faculty"
                android:textColor="#ffffff"
                android:textSize="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/new_login"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:gravity="center_vertical">

                <Spinner
                    android:id="@+id/spinnerfaculty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/background_transparent"
                    android:gravity="center_vertical"
                    android:spinnerMode="dropdown" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/spinner_down_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="#ffffff"
            android:id="@+id/view3"
            android:layout_below="@+id/selectfaculty"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/view3"
            android:id="@+id/selectdepartment"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Select Your Department"
                android:textColor="#ffffff"
                android:textSize="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/new_login"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:gravity="center_vertical">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/background_transparent"
                    android:gravity="center_vertical"
                    android:spinnerMode="dropdown"
                    android:id="@+id/spinnerdepartment" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/spinner_down_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>

        </LinearLayout>


        <Button
            android:id="@+id/continu"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rounded_orange"
            android:fontFamily="@font/poppins_bold"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="15dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>