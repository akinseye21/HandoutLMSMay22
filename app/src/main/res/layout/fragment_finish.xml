<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#293450"
    tools:context=".FinishFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic18"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="normal"
            android:textSize="12dp"
            android:text="Handout User Agreement"
            android:layout_margin="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textStyle="italic"
                android:textSize="12dp"
                android:text="Check here to indicate the you have read and agreed with our privacy policy and terms of service"/>
        </LinearLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="27dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Finish"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:id="@+id/finis"
            android:background="@drawable/rounded_purple_green_corner"/>

    </LinearLayout>



</ScrollView>