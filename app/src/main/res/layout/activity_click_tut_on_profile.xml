<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#293241"
    android:padding="10dp"
    tools:context=".ClickTutOnProfile">

    <RelativeLayout
        android:id="@+id/rel0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_left" />

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/back"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:text="Welcome Back!"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Username"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Group Name"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rel2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/lin11">
                    <LinearLayout
                        android:id="@+id/lin1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/rounded_purple"
                            android:padding="20dp"
                            android:src="@drawable/new1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/joinedUsers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="0"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_light"
                                android:text="Joined users"
                                android:textColor="#fff"
                                android:textSize="10dp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/viewdem"
                            android:visibility="gone"
                            android:background="#51C8F2"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/linClassSize"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/classSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="50"
                                android:textColor="#fff"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_light"
                                android:text="Class Size"
                                android:textColor="#fff"
                                android:textSize="10dp"
                                android:textStyle="normal" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/editClassSize"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/class_size_asset"
                            android:padding="4dp"
                            android:background="@drawable/rounded_red2"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Edit Class Size"
                                android:textColor="#fff"
                                android:textSize="8dp"
                                android:textStyle="normal" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#fff"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lin2"
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/lin11"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/dotted_line"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/lin3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin2"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/rounded_purple"
                        android:padding="20dp"
                        android:src="@drawable/new2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pendingRequest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="0"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            android:text="Pending Request"
                            android:textColor="#fff"
                            android:textSize="10dp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/lin3"
                    android:background="@drawable/dotted_line"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/lin4"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/lin5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin4"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/rounded_purple"
                        android:padding="20dp"
                        android:src="@drawable/new3" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="14 April, 2023"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            android:text="Expiration Date"
                            android:textColor="#fff"
                            android:textSize="10dp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel2"
                android:id="@+id/rel3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="50dp"
                    android:id="@+id/loading"
                    android:gravity="center"
                    tools:ignore="MissingConstraints">

                    <ProgressBar
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:indeterminateTint="#fff"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Loading"
                        android:textColor="#fff"
                        android:textSize="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:paddingBottom="10dp"
                    android:text="Most Viewed Resources"
                    android:textColor="#fff"
                    android:textSize="8dp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No views on your resources yet."
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:drawableTop="@drawable/notification"
                    android:layout_marginTop="50dp"
                    android:id="@+id/noviews"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt"
                    android:scrollbars="none"
                    android:visibility="gone"
                    android:id="@+id/horizontalScrollView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:id="@+id/card1"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/corner_white2">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                app:cardCornerRadius="10dp"
                                app:cardBackgroundColor="#293241"
                                android:outlineAmbientShadowColor="#ffffff"
                                android:outlineSpotShadowColor="#000000"
                                android:layout_margin="5dp"
                                android:elevation="10dp">

                                <ImageView
                                    android:id="@+id/img1"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:scaleType="centerCrop"
                                    android:clipToOutline="true"
                                    />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name1"
                                android:text="Tutorial Resource Name"
                                android:textSize="10dp"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Number of Engagements"
                                    android:textSize="8dp"
                                    android:paddingLeft="10dp"
                                    android:textStyle="normal"
                                    android:textColor="#000"
                                    android:layout_alignParentLeft="true"/>

                                <TextView
                                    android:id="@+id/count1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:paddingRight="10dp"
                                    android:text="0"
                                    android:textColor="#000"
                                    android:textSize="8dp"
                                    android:textStyle="normal" />
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:id="@+id/card2"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/corner_white2">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                app:cardCornerRadius="10dp"
                                app:cardBackgroundColor="#293241"
                                android:outlineAmbientShadowColor="#ffffff"
                                android:outlineSpotShadowColor="#000000"
                                android:layout_margin="5dp"
                                android:elevation="10dp">

                                <ImageView
                                    android:id="@+id/img2"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:scaleType="centerCrop"
                                    android:clipToOutline="true"
                                    />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name2"
                                android:text="Tutorial Resource Name"
                                android:textSize="10dp"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Number of Engagements"
                                    android:textSize="8dp"
                                    android:paddingLeft="10dp"
                                    android:textStyle="normal"
                                    android:textColor="#000"
                                    android:layout_alignParentLeft="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/count2"
                                    android:text="0"
                                    android:textSize="8dp"
                                    android:paddingRight="10dp"
                                    android:textStyle="normal"
                                    android:textColor="#000"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:id="@+id/card3"
                            android:background="@drawable/corner_white2">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                app:cardCornerRadius="10dp"
                                app:cardBackgroundColor="#293241"
                                android:outlineAmbientShadowColor="#ffffff"
                                android:outlineSpotShadowColor="#000000"
                                android:layout_margin="5dp"
                                android:elevation="10dp">

                                <ImageView
                                    android:id="@+id/img3"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:scaleType="centerCrop"
                                    android:clipToOutline="true"
                                    />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name3"
                                android:text="Tutorial Resource Name"
                                android:textSize="10dp"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Number of Engagements"
                                    android:textSize="8dp"
                                    android:paddingLeft="10dp"
                                    android:textStyle="normal"
                                    android:textColor="#000"
                                    android:layout_alignParentLeft="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/count3"
                                    android:text="0"
                                    android:textSize="8dp"
                                    android:paddingRight="10dp"
                                    android:textStyle="normal"
                                    android:textColor="#000"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            android:orientation="vertical"
                            android:id="@+id/card4"
                            android:background="@drawable/corner_white2">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                app:cardCornerRadius="10dp"
                                app:cardBackgroundColor="#293241"
                                android:outlineAmbientShadowColor="#ffffff"
                                android:outlineSpotShadowColor="#000000"
                                android:layout_margin="5dp"
                                android:elevation="10dp">

                                <ImageView
                                    android:id="@+id/img4"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:scaleType="centerCrop"
                                    android:clipToOutline="true"
                                    />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name4"
                                android:text="Tutorial Resource Name"
                                android:textSize="10dp"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:paddingLeft="10dp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Number of Engagements"
                                    android:textSize="8dp"
                                    android:paddingLeft="10dp"
                                    android:textStyle="normal"
                                    android:textColor="#000"
                                    android:layout_alignParentLeft="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/count4"
                                    android:text="100"
                                    android:textSize="8dp"
                                    android:paddingRight="10dp"
                                    android:textStyle="normal"
                                    android:textColor="#000"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/edit"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_orange"
        android:fontFamily="@font/poppins_bold"
        android:text="View/Edit Resources"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:textStyle="bold" />


</RelativeLayout>