<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_white_green_corner">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/correct"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Your have successfully bidded for"
        android:textColor="#f4000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/gigName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="XXXXX"
        android:textAllCaps="true"
        android:textColor="#f4000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Your bid is currently under\nreview and subject to approval"
        android:textColor="#f4000000"
        android:textSize="15dp" />


    <Button
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_orange"
        android:fontFamily="@font/poppins_bold"
        android:stateListAnimator="@null"
        android:text="Close"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="12dp" />



</LinearLayout>