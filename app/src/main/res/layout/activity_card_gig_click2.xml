<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#293241"
        android:paddingBottom="10dp"
        tools:context=".activities.CardGigClick2">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
            android:id="@+id/rel1">
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/back"
                android:src="@drawable/arrow_left"/>

    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                    android:id="@+id/image"
                        android:src="@drawable/profile_header"/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/name"
                            android:text="Ada Kayari"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                        android:fontFamily="@font/poppins_bold"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/department"
                            android:text="Civil Engineering"
                            android:textSize="10dp"
                            android:textStyle="normal"
                            android:textColor="#ffffff"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/uni"
                            android:text="University of Abuja"
                            android:textSize="10dp"
                            android:textStyle="normal"
                            android:textColor="#ffffff"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp"
                android:visibility="gone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ic163"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:text="Project Name"
                    android:textStyle="bold"
                    android:textColor="#8cc63e"
                android:fontFamily="@font/poppins_bold"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic157"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/gig_name"
                        android:text="Website Design"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/poppins_regular"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic178"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open"
                        android:textSize="10dp"
                        android:textStyle="italic"
                        android:textColor="#ffffff"/>
                </LinearLayout>


            </RelativeLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:text="Project Description"
                    android:textStyle="bold"
                android:textColor="#8cc63e"
                android:fontFamily="@font/poppins_bold"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic177"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/gig_description"
                        android:text="Lorium ipsium, the description of the project will be displayed here. hahi jeie hiy qi hish s   iw eh ihi whoefhi w iwhe he hihwe wiuf wu ei h ueukw"
                        android:textStyle="normal"
                        android:textColor="#ffffff"
                    android:fontFamily="@font/poppins_regular"/>

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:text="Payment structure"
                    android:textStyle="bold"
                android:textColor="#8cc63e"
                android:fontFamily="@font/poppins_bold"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic181"/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/gig_category"
                            android:text="$1,000 - $1,500"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                        android:fontFamily="@font/poppins_regular"/>
<!--                    <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginLeft="5dp"-->
<!--                            android:text="Fixed Price"-->
<!--                            android:textSize="10dp"-->
<!--                            android:textStyle="normal"-->
<!--                            android:textColor="#91ffffff"/>-->
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                        android:text="NGN:"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                    android:fontFamily="@font/poppins_bold"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="3dp"
                        android:orientation="vertical">
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="Enter Amount"
                            android:id="@+id/bidAmount"
                            android:textSize="13dp"
                            android:inputType="number"
                            android:background="@null"
                            android:layout_marginTop="8dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="#ffffff"
                        android:textColorHint="@color/lb_grey"
                        android:fontFamily="@font/poppins_regular"/>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:background="#ffffff"/>

                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_outline"
                    android:layout_marginTop="40dp"
                    android:id="@+id/uploadCV"
                    android:gravity="center"
                    android:padding="20dp"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                    android:layout_centerVertical="true"
                        android:src="@drawable/home_ic4"
                    app:tint="#8cc63e" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload CV"
                        android:textSize="10dp"
                        android:paddingLeft="5dp"
                        android:textColor="#8cc63e"
                    android:fontFamily="@font/poppins_light"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please kindly upload your curriculum vitae in PDF format ONLY"
                        android:textSize="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="#ffffff"
                    android:fontFamily="@font/poppins_light"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="File: "
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textSize="10dp"
                    android:fontFamily="@font/poppins_bold"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/file_path"
                        android:layout_marginLeft="10dp"
                        android:textColor="#ffffff"
                        android:textStyle="italic"
                        android:textSize="10dp"
                        android:text="......no file selected....."
                    android:fontFamily="@font/poppins_italic"/>

            </LinearLayout>


            <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|center_vertical"
                    android:visibility="gone"
                    android:id="@+id/progressBar"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/upload_text"
                    android:visibility="gone"
                    android:text="Biding... Please wait"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#ffffff"/>



            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Finish"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="@drawable/rounded_orange"
                    android:textAllCaps="false"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/finish"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_bold"/>
        </LinearLayout>
    </ScrollView>




</LinearLayout>