<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#293241"
    tools:context=".TodayTask">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_grey"
                android:layout_margin="10dp"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circle_dark_green"
                    android:layout_centerVertical="true"
                    android:id="@+id/lin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phy103 Exams"
                    android:textColor="#6e6e70"
                    android:layout_toRightOf="@+id/lin"
                    android:paddingLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_grey"
                android:layout_margin="10dp"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circle_yellow"
                    android:layout_centerVertical="true"
                    android:id="@+id/lin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GST104 Test"
                    android:textColor="#6e6e70"
                    android:layout_toRightOf="@+id/lin"
                    android:paddingLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_grey"
                android:layout_margin="10dp"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circle_red"
                    android:layout_centerVertical="true"
                    android:id="@+id/lin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MEC124 Assignment"
                    android:textColor="#6e6e70"
                    android:layout_toRightOf="@+id/lin"
                    android:paddingLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_grey"
                android:layout_margin="10dp"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circle_dark_green"
                    android:layout_centerVertical="true"
                    android:id="@+id/lin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHM121 Exams"
                    android:textColor="#6e6e70"
                    android:layout_toRightOf="@+id/lin"
                    android:paddingLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"/>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ffffff"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_green">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="19dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add a new task"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>