            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                android:id="@+id/one"
                android:visibility="invisible"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic93" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date"
                        android:text="N/A"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:paddingLeft="2dp"/>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/one"
                android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:text="Connect"
                        android:textColor="#ffffff"
                        android:textStyle="bold|italic"
                        android:textSize="12dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:background="@drawable/rounded_white_transparent_100"
                        android:padding="5dp"/>
            </LinearLayout>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/con"
                android:src="@drawable/ic195" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:id="@+id/con"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_marginRight="20dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic193"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/connect_txt"
                    android:background="@drawable/round_white"
                    android:text="Connect"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"/>
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:id="@+id/lincat"
                android:layout_below="@+id/myrel">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">
                <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:background="@drawable/rounded_pink2">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tutorials"
                            android:textSize="10dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:textColor="#ffffff"/>
                </LinearLayout>




            </LinearLayout>



