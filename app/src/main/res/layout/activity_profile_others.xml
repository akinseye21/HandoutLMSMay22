<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#293241"
        tools:context=".ProfileOthers">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#293241">
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/back"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/arrow_left"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_below="@+id/back"
                android:background="@drawable/ic90"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/user"
            app:civ_border_color="#fff"
            app:civ_border_overlay="true"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pp"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:ellipsize="end"
            android:maxLength="18"
            android:text="XXXX"
            android:textColor="#ffffff"
            android:textSize="8dp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/prof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="180dp"
            android:layout_toRightOf="@+id/pp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="#ffffff"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:textSize="10dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="University of Lagos"
                android:textColor="#ffffff"
                android:textSize="10dp"
                android:textStyle="normal" />
        </LinearLayout>



        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prof"
                android:id="@+id/myrel"
                android:layout_margin="10dp">
            <!--           <LinearLayout-->
            <!--               android:layout_width="wrap_content"-->
            <!--               android:layout_height="wrap_content"-->
            <!--               android:gravity="center_vertical"-->
            <!--               android:layout_centerVertical="true"-->
            <!--               android:orientation="horizontal">-->
