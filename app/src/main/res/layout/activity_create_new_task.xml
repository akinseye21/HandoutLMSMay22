<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#293241"
    android:orientation="vertical"
    tools:context=".CreateNewTask">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/rel1">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_left" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Create\nNew Task"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:layout_marginTop="30dp"
                    android:textColor="#65dc9a"
                    android:textSize="12dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:hint="Name your task"
                    android:textColorHint="#ffffff"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:id="@+id/title"
                    android:background="@null"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ffffff"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task"
                    android:layout_marginTop="30dp"
                    android:textColor="#65dc9a"
                    android:textSize="12dp"/>

<!--                <EditText-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:layout_marginRight="10dp"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:singleLine="true"-->
<!--                    android:hint="Choose a task"-->
<!--                    android:textColorHint="#ffffff"-->
<!--                    android:textColor="#ffffff"-->
<!--                    android:textSize="12dp"-->
<!--                    android:id="@+id/task"-->
<!--                    android:background="@null"/>-->

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/spinnertask"
                    android:background="@drawable/rounded_purple_register2_dropdown"
                    android:spinnerMode="dialog"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ffffff"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:layout_marginTop="30dp"
                    android:textColor="#65dc9a"
                    android:textSize="12dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:hint="Set starting and deadline dates"
                    android:textColorHint="#ffffff"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:id="@+id/date"
                    android:background="@null"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ffffff"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starting Time"
                    android:layout_marginTop="30dp"
                    android:textColor="#65dc9a"
                    android:textSize="12dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:hint="00:00"
                    android:textColorHint="#ffffff"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:id="@+id/startTime"
                    android:background="@null"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ffffff"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team"
                    android:layout_marginTop="30dp"
                    android:textColor="#65dc9a"
                    android:textSize="12dp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/spinnerteam"
                    android:background="@drawable/rounded_purple_register2_dropdown"
                    android:spinnerMode="dialog"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ffffff"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:layout_marginTop="30dp"
                    android:textColor="#65dc9a"
                    android:textSize="12dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:hint="Write a short description"
                    android:textColorHint="#ffffff"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:id="@+id/description"
                    android:background="@null"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ffffff"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="10dp"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/progressBar"
                    android:visibility="gone"/>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Create Task"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/rounded_green"
                    android:textAllCaps="false"
                    android:id="@+id/createTask"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>