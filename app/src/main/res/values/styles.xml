<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">7dp</item>
        <item name="android:textColor">#cccccc</item>
    </style>

    <style name="MyCustomTabText2" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">7dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/rounded_white_little</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavTheme" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="android:textColor">#555756</item>
        <item name="colorOnBackground">#bd7a15</item>
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#484a49</item>
        <item name="colorAccent">#828583</item>
        <item name="android:windowBackground">#ffffff</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
